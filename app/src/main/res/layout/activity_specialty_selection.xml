<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecialtySelectionActivity">

    <Button
        android:id="@+id/registerAsDoctor"
        android:layout_width="151dp"
        android:layout_height="54dp"
        android:layout_marginBottom="36dp"
        android:text="Register"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/familyMedicineSpecialty"
        android:layout_width="287dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:text="Family Medicine"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/internalMedicineSpecialty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/internalMedicineSpecialty"
        android:layout_width="287dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:text="Internal Medicine"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/pediatricsSpecialty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/pediatricsSpecialty"
        android:layout_width="287dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:text="Pediatrics"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/obstetricsSpecialty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/obstetricsSpecialty"
        android:layout_width="287dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:text="Obstetrics"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gynecologySpecialty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/gynecologySpecialty"
        android:layout_width="287dp"
        android:layout_height="70dp"
        android:layout_marginBottom="36dp"
        android:text="Gynecology"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/registerAsDoctor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="283dp"
        android:layout_height="58dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Select Your Specialties"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/familyMedicineSpecialty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>