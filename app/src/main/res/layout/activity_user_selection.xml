<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSelectionActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="297dp"
        android:layout_height="66dp"
        android:layout_marginTop="72dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Select Account Type"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/doctorButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/doctorButton"
        android:layout_width="223dp"
        android:layout_height="54dp"
        android:layout_marginBottom="48dp"
        android:text="Doctor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/patientButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/patientButton"
        android:layout_width="223dp"
        android:layout_height="54dp"
        android:layout_marginBottom="252dp"
        android:text="Patient"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>